<%- include('header'); -%>
<%- include('navbar'); -%>

  <div class="jumbotron masthead text-center" id="north">
    <h1 class="text-center">Edit Your Question Here!</h1>
  </div>
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card my-4">
          <div class="card-body">
            <form method="post" action="/showQuestion/<%=req.params.id%>/editQuestion/processQuestionPost">
              <div class="form-group">
                <h5 class="card-header">Title</h5>
                <input type="text" class="form-control" id="question" name="question" value="<%=req.params.question%>"><br>
              </div>
              <div class="form-group">
                <h5 class="card-header">Description</h5>
                <textarea class="form-control" name = "description" rows="6"><%=req.params.description%></textarea>
              </div>
              <input class="btn btn-primary" type="submit">
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>


<%- include('footer'); -%>
