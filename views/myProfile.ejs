<%- include('header'); -%>
<%- include('navbar'); -%>

<section class="section section--grey">
    <div class="section__content section__content--full-width">
        <div class="jumbotron masthead text-center">
            <div class="section__title section__title--centered">
                <%= user.userName %>'s profile
            </div>
            <h3>Please edit your profile here</h3>
        </div>
    </div>
</section>

<section class="section section--grey">
    <div class="container">

        <div class="row">
            <div class="col-md-4 col-sm-12"></div>
            <div class="col-md-4 col-sm-12">
                <h3><b>User Profile:</b></h3>
                <hr>
                <div class="input-group-prepend">
                    <span class="input-group-text">Username</span>
                    <input disabled type="text" class="form-control" value="<%= profile.userName %>">
                </div>

                <br>

                <div class="input-group-prepend">
                    <span class="input-group-text">Email</span>
                    <input disabled type="text" class="form-control" value="<%= profile.googleemail %>">
                </div>

                <br>

                <div class="input-group-prepend">
                    <span class="input-group-text">Status</span>
                    <input disabled type="text" class="form-control" value="<%= profile.status %>">
                </div>

                <br>
                <% if (profile.profilePicURL) { %>
                    <img src="<%= profile.profilePicURL %>" width="100%" alt="profile picture">
                <% } else { %>
                    No profile image
                <% } %>

                <br>
                <br>

                <a href="/editMyProfile/<%= user._id %>"><input type="button" id='editBtn' value="Edit"
                                                                class="btn btn-outline-primary"></a>

                <br>
                <br>
            </div>
            <div class="col-md-1"></div>
            <% if (profile.status == "tutor") { %>
                <div class="col-md-4 col-sm-12">
                    <h3><b>Tutor Profile:</b></h3>
                    <hr>
                    <div class="input-group-prepend">
                        <span class="input-group-text">Introduction</span>
                        <input disabled type="text" class="form-control" value="<%= profile.introduction %>">
                    </div>

                    <br>

                    <div class="input-group-prepend">
                        <span class="input-group-text">Rating</span>
                        <input disabled type="text" class="form-control" value="<%= profile.score %>">
                    </div>

                    <br>

                    <h5> <%= profile.userName %> is tutoring:</h5>
                    <hr>
                    <% if (profile.tutorClassCodes.length === 0) { %>
                        No class found
                    <% } %>
                    <ul class="list-group">
                        <% for (i = 0; i < profile.tutorClassCodes.length; i++){ %>
                            <li class="list-group-item"><%= profile.tutorClassCodes[i] %></li>
                        <% } %>
                    </ul>

                    <br>

                    <h5> Comments for <%= profile.userName %>:</h5>
                    <hr>
                    <% if (profile.comments.length === 0) { %>
                        No comments found
                    <% } %>
                    <ul class="list-group">
                        <% for (i = 0; i < profile.comments.length; i++){ %>
                            <li class="list-group-item"><%= profile.comments[i] %></li>
                        <% } %>
                    </ul>

                    <br>

                    <a href="/editMyTutorProfile/<%= user._id %>"><input type="button" id='editBtn'
                                                                         value="Edit Tutor Profile"
                                                                         class="btn btn-outline-primary"></a>
                </div>
            <% } %>

        </div>
    </div>
</section>

<%- include('footer'); -%>
