              <input type="radio" name="rating-star" class="rating__control" id="rc5">
              <label for="rc1" class="rating__item">
                <svg class="rating__star">
                  <use xlink:href="#star" onClick="rate1()">
                  </use>
                </svg>
                <span class="rating__label">1</span>
              </label>
              <label for="rc2" class="rating__item">
                <svg class="rating__star" onClick="rate2()">
                  <use xlink:href="#star"></use>
                </svg>
                <span class="rating__label">2</span>
              </label>
              <label for="rc3" class="rating__item">
                <svg class="rating__star" onClick="rate3()">
                  <use xlink:href="#star"></use>
                </svg>
                <span class="rating__label">3</span>
              </label>
              <label for="rc4" class="rating__item">
                <svg class="rating__star" onClick="rate4()">
                  <use xlink:href="#star"></use>
                </svg>
                <span class="rating__label">4</span>
              </label>
              <label for="rc5" class="rating__item">
                <svg class="rating__star" onClick="rate5()">
                  <use xlink:href="#star"></use>
                </svg>
                <span class="rating__label">5</span>
              </label>
              <script>
                function rate1(){
                var rate = document.getElementById('rate')
                rate.innerText = "Poor."
                }
                function rate2(){
                var rate = document.getElementById('rate')
                rate.innerText = "Acceptable.."
                }
                function rate3(){
                var rate = document.getElementById('rate')
                rate.innerText = "Just Okay..."
                }
                function rate4(){
                var rate = document.getElementById('rate')
                rate.innerText = "Great Tutoring!"
                }
                function rate5(){
                var rate = document.getElementById('rate')
                rate.innerText = "That's CLASTER BABE!"
                }
              </script>
            </div>
        </div>
