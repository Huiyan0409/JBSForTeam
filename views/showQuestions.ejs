<%- include('header') -%>
<%- include('navbar') -%>

<div class="jumbotron masthead text-center" id="north">
  <h1 class="text-center">Questions</h1>
  <br>
  <a class="btn btn-primary" href="/postQuestion">
    <span class="fa fa-google-plus">Post A New Question</span>
  </a>
</div>
<div class="container">

  <div class="row">

    <div class="col">
      <% for (i = 0; i<questions.length; i++){  %>
        <a class = "lead" href="/showQuestion/<%=questions[i]._id%>"><%= questions[i].question %></a>
        <br><br>
        <h6>By <%=questions[i].userName%></h6>
        <h6><%=questions[i].createdAt%></h6>
        <hr>
      <% } %>
    </div>

  </div>

</div>

<%- include('footer') -%>
