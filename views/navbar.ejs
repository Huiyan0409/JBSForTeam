<script src="/js/menu1.js"></script>

<header class="header">
    <div class="header__content header__content--fluid-width">
        <a class="header__logo-title" href="/">Claster</a>
        <nav class="header__menu">
            <ul>
                <li>
                    <a class="header-link" href="/">HOME</a>
                </li>

                <% if (loggedIn) { %>
                    <li>
                        <a class="header-link" id="header-link" href="/forumFunction">Q&A Forum</a>
                        <ul class="sub-menu">
                            <% for (i = 0; i < user.classCodes.length; i++) { %>
                                <li><a href="/showQuestions/<%= user.classCodes[i] %>"
                                       class="header-link"><%= user.classCodes[i] %></a></li>
                            <% } %>
                        </ul>
                    </li>
                <% } %>

                <li>
                    <% if (loggedIn) { %>
                        <a class="header-link" id="header-link" href="/tutorFunction">Find/become a tutor</a>
                        <ul class="sub-menu">
                            <li><a href="/tutorRegister" class="header-link">Become a tutor</a></li>
                            <li><a href="/showTutors" class="header-link">Find a tutor</a></li>
                        </ul>
                    <% } %>
                </li>

                <li>
                    <a class="header-link" id="header-link" href="/userFunction">Notifications & Settings</a>
                    <ul class="sub-menu">

                        <li>
                            <% if (loggedIn) { %>
                                <a href="/taskBoard" class="header-link">Appointments</a>
                            <% } %>
                        </li>

                        <li>
                            <% if (loggedIn) { %>
                                <a class="header-link" href="/communicationBoard">Messages</a>
                            <% } %>
                        </li>
                        <li>
                            <% if (loggedIn) { %>
                                <a class="header-link" href="/myProfile/<%= user._id %>">View/edit profile</a>
                            <% } %>
                        </li>

                        <li>
                            <% if (loggedIn && user.status === "admin") { %>
                                <a class="header-link" href="/showProfiles">All PROFILES</a>
                            <% } %>
                        </li>
                    </ul>
                </li>

                <li class="header__btn header__btn--login">
                    <% if (!loggedIn) { %>
                        <a class="nav-link" href="/auth/google">Login with Google</a>
                    <% } else { %>
                        <a class="nav-link" href="/logout">Logout</a>
                    <% } %>
                </li>
            </ul>
        </nav>
    </div>
</header>
