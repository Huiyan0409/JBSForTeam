<header class="header">
  <div class="header__content header__content--fluid-width">
    <a class="header__logo-title">Claster</a>
    <nav class="header__menu">
      <ul>
        <li>
          <a class="header-link" href="/">HOME</a>
        </li>

        <li>
          <a class="header-link" href="#" >FORUM</a>
          <ul class="sub-menu">
            <% for (i = 0; i < user.classCodes.length; i++) {%>
              <li><a href="/showQuestions/<%=user.classCodes[i]%>" class="header-link"><%=user.classCodes[i]%></a></li>
            <% } %>
          </ul>
        </li>

        <li>
          <% if (loggedIn) {%>
            <a class="header-link" href="/classes">CLASSES</a>
          <% } %>
        </li>

        <li>
          <% if (loggedIn) {%>
            <a class="header-link" href="#tutor">FIND TUTOR</a>
          <% } %>
        </li>

        <li>
          <% if (loggedIn) {%>
            <a class="header-link" href="/myProfile/<%=user._id%>">PROFILE</a>
          <% } %>
        </li>

        <li>
          <% if (loggedIn && status == 'admin') {%>
            <a class="header-link" href="/showProfiles" >ALL PROFILES</a>
          <% } %>
        </li>

        <li class="header__btn header__btn--login">
          <% if (!loggedIn) {%>
          <a class="nav-link d-flex ml-5" id="btnBorder" href="/auth/google">Login with Google</a>
          <%} else {%>
          <a class="nav-link d-flex ml-5" id="btnBorder" href="/logout">Logout</a>
          <% } %>
        </li>
      </ul>
    </nav>
  </div>
</header>
